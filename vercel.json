{
    "github": {
        "silent": true
    },
    "buildCommand": "cd client && npm install && npm run build",
    "outputDirectory": "client/build",
    "public": true,
    "routes": [
        {
            "handle": "filesystem"
        },
        {
            "src": "/sitemap\\.xml",
            "headers": {
                "Content-Type": "application/xml"
            }
        },
        {
            "src": "/(.*)",
            "dest": "/index.html"
        }
    ]
}