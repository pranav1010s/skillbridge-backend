{
    "version": 2,
    "builds": [
        {
            "src": "client/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "build"
            }
        },
        {
            "src": "server/index.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/sitemap.xml",
            "dest": "/client/public/sitemap.xml",
            "headers": {
                "content-type": "application/xml"
            }
        },
        {
            "src": "/robots.txt",
            "dest": "/client/public/robots.txt"
        },
        {
            "src": "/static/(.*)",
            "dest": "/client/build/static/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/client/build/index.html"
        }
    ]
}